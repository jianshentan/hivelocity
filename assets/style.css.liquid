/* ============= GLOBAL ============== */

body {
    font-family: 'Open Sans', sans-serif;
    font-weight: 700;
    font-size: 2.0em;
    margin: 0px;
    min-width: 960px;
}

a:-webkit-any-link {
    text-decoration: none !important;
}

a:-webkit-any-link.white_font {
    color: white;
}

a:-webkit-any-link.black_font {
    color: black;
}

main {
    margin-top: 80px;
}

.caps {
    font-family: 'Ubuntu', sans-serif;
}
.large {
    font-size: 3.0em;
}
.medium {
    font-size: 2.0em;
}
.small {
    font-size: 1.0em;
}

.content {
    width: 960px;
    margin: 0 auto;
}

/* ============= NAV ============== */

nav {
    position: fixed;
    top: 0; left: 0; bottom: 0;
    background-color: white;
    color: black;
    width: 100%; height: 100%;
    z-index: 1000;
    min-width: 960px;
    overflow-y: auto;
    overflow-x: hidden;
}

.navigation_header > div {
    cursor: pointer;
    display: inline-block;
}

.close_navigation {
    float: right;
}


/* ============= FOOTER ============== */
footer {
    position: fixed;
    bottom: 0;
    width: 100%;
    text-align: center;
    min-width: 960px;
}

.social_button_container {
    height: 100px;
}

.social_button {
    display: inline-block;
    margin: 0 30px;
    background-color: rgba(255,255,255,0.5);
    padding: 10px;
    width: 60px; height: 60px;
}

/* ============= SPLASH ============== */
#splash {
    width: 100%;
    height: 700px;
    background-image: url( {{ 'splash.png' | asset_url }} );
    background-size: cover;
}

/* ============= MAIN ============== */

#shop_name_container {
    position: fixed;
    top: 0px; left: 0;
    width: 100%; height: 80px;
    background-color: rgba(255,255,255,0.5);
    min-width: 1024px;
}

#shop_name_main {
    vertical-align: top;
    display: inline-block;
    cursor: pointer;
}

#shop_cart {
    display: inline-block;
    float: right;
    cursor: pointer;
}
