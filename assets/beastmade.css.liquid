.beastmade {
    font-family: 'Roboto Condensed', sans-serif;
    color: red;
    font-size: 1.6em;
}

.beastmade .content {
    margin: 40px auto !important;
}

.beastmade_logo {
    background-color: white;
    color: red;
    width: 300px;
    height: 100px;
    line-height: 100px;
    text-align: center;
    margin: 0px auto;
}

.uppercase {
    text-transform: uppercase;   
}

.beastmade_description {
    text-align: justify;
}

.beastmade_product_container {
    background-color: white;
    padding: 40px 0px;
}

.beastmade_product_info,
.beastmade_product_image {
    display: inline-block;
}

.beastmade_product_image {
    width: 45%;
}

.beastmade_product_info {
    width: 50%;
    float: right;
    position: relative;
}

.beastmade_product_info > div {
    width: 100%;
}

.beastmade_product_title {
    font-size: 1.8em;
    line-height: 100px;
}

.beastmade_product_price {
    font-size: 1.4em;
    line-height: 70px;
}

.beastmade_product_description {
    font-size: 0.8em;
    line-height: 50px;
    margin: 30px auto;
}

.beastmade_product_action {
    position: absolute;
    bottom: 0px;
    left: 0px;
    font-size: 1.6em;
    background-color: #fcd806;
    width: 100px; 
    text-align: center;
    cursor: pointer;
}

.beastmade_slogan {
    text-align: center;
    font-size: 1.6em;
}

.beastmade_date {
    background-color: white;
    color: red;
    width: 200px;
    height: 80px;
    line-height: 80px;
    text-align: center;
    margin: 0px auto;
    font-size: 1.0em;
}
